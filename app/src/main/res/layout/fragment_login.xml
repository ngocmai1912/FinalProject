<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment"
    android:background="@drawable/bg_login">
    <TextView
        android:id="@+id/tx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="ĐĂNG NHẬP"
        android:fontFamily="@font/font_bold"
        android:textSize="56sp"
        android:textColor="#36448B"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:background="@drawable/frame"
        android:layout_marginTop="110dp"
        android:paddingLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx"
        android:hint="Email"
        android:fontFamily="@font/font_medium"
        android:textColorHint="#4F000000"
        android:textColor="#36448B"/>
    <ImageView
        app:layout_constraintLeft_toLeftOf="@id/edt_email"
        app:layout_constraintTop_toTopOf="@id/edt_email"
        app:layout_constraintBottom_toBottomOf="@id/edt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_email"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:background="@drawable/frame"
        android:layout_marginTop="40dp"
        android:paddingLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        android:hint="Mật khẩu"
        android:fontFamily="@font/font_medium"
        android:textColorHint="#4F000000"
        android:textColor="#36448B"/>
    <ImageView
        app:layout_constraintLeft_toLeftOf="@id/edt_pass"
        app:layout_constraintTop_toTopOf="@id/edt_pass"
        app:layout_constraintBottom_toBottomOf="@id/edt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pass"
        android:layout_marginLeft="20dp"/>
    <ImageButton
        android:id="@+id/btn_toggle"
        app:layout_constraintRight_toRightOf="@id/edt_pass"
        app:layout_constraintTop_toTopOf="@id/edt_pass"
        app:layout_constraintBottom_toBottomOf="@id/edt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_see"
        android:layout_marginRight="30dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_btn"
        android:text="ĐĂNG NHẬP"
        android:textAllCaps="false"
        android:fontFamily="@font/font_medium"
        android:textSize="28sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_pass"
        android:layout_marginTop="90dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản?  "
            android:fontFamily="@font/font_medium"
            android:textSize="14sp"
            android:textColor="#36448B"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký ngay"
            android:fontFamily="@font/font_medium"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#FC4D4D"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>